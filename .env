# Environment
CI_ENVIRONMENT = development

# App
app.baseURL = 'http://localhost:8080/'        # ubah ke URL aplikasi Anda (mis. https://example.com)
app.forceGlobalSecureRequests = false         # true jika pakai HTTPS di production
app.CSPEnabled = false                        # Content Security Policy (aktifkan di production bila perlu)

# Database (sesuaikan username/password sesuai server Anda)
database.default.hostname = localhost
database.default.database = projek_kai
database.default.username = root
database.default.password = 
database.default.DBDriver = MySQLi
database.default.DBPrefix =
database.default.port = 3306
database.default.charset = utf8mb4
database.default.DBCollat = utf8mb4_general_ci

# Tests database (optional)
# database.tests.hostname = localhost
# database.tests.database = ci4_test
# database.tests.username = root
# database.tests.password = root
# database.tests.DBDriver = MySQLi
# database.tests.DBPrefix =
# database.tests.charset = utf8mb4
# database.tests.DBCollat = utf8mb4_general_ci
# database.tests.port = 3306

# Encryption
# Ganti kunci ini dengan kunci acak yang panjang dan rahasiakan.
encryption.key = b3f1c9e8a7d4f6c2b9e3a1f0d7c6b5a4e2f1c3d9a8b7c6d

# Session
session.driver = 'CodeIgniter\\Session\\Handlers\\FileHandler'
# Pastikan folder writable/session ada dan dapat ditulis oleh webserver
session.savePath = writable/session

# CSRF & Security (opsional â€” CI4 biasanya mengatur CSRF via Filters)
# Jika Anda ingin menonaktifkan CSRF (tidak disarankan di production), atur di Config/Filters.php
# security.csrfProtection = true

# Logger
logger.threshold = 4   # 0 = off, 1 = emergency, ... 4 = debug (development)

# Other helpful defaults
app.sessionExpiration = 7200     # (detik) 2 jam
